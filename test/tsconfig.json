{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": ["node"],
    "outDir": "./dist/node"
  },
  "include": ["node/**/*"],
  "exclude": ["node_modules"]
}
